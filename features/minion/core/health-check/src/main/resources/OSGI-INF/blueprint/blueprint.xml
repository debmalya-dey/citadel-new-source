<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0 
        https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <bean id="passiveEchoRpcHealthCheck" class="api.health.org.citadel.core.DefaultPassiveHealthCheck">
        <argument value="Echo RPC (passive)"/>
        <argument>
            <list>
                <value>broker</value>
                <value>passive</value>
            </list>
        </argument>
        <argument value="Unknown"/>
    </bean>

    <service ref="passiveEchoRpcHealthCheck">
        <interfaces>
            <value>api.health.org.citadel.core.HealthCheck</value>
            <value>api.health.org.citadel.core.HealthCheckResponseCache</value>
        </interfaces>
        <service-properties>
            <entry key="alias" value="opennms.passiveEchoRpcHealthCheck"/>
        </service-properties>
    </service>

</blueprint>
