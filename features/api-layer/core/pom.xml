<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.citadel.features</groupId>
        <artifactId>org.citadel.features.api-layer</artifactId>
        <version>35.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.citadel.features.api-layer</groupId>
    <artifactId>org.citadel.features.api-layer.core</artifactId>
    <name>OpenNMS :: Features :: API Layer :: Core</name>
    <packaging>bundle</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.mapstruct</groupId>
                            <artifactId>mapstruct-processor</artifactId>
                            <version>${mapstructVersion}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <properties>
        <!-- automatically run annotation processors within the incremental compilation -->
        <m2e.apt.activation>jdt_apt</m2e.apt.activation>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.citadel.features.api-layer</groupId>
            <artifactId>org.citadel.features.api-layer.dao-common</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.citadel</groupId>
            <artifactId>citadel-config-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel.core</groupId>
            <artifactId>org.citadel.core.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel</groupId>
            <artifactId>citadel-config-model</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel</groupId>
            <artifactId>citadel-config</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel</groupId>
            <artifactId>citadel-alarm-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.ticketing</groupId>
            <artifactId>org.citadel.features.ticketing.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.topology</groupId>
            <artifactId>org.citadel.features.topology.api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.collection</groupId>
            <artifactId>org.citadel.features.collection.thresholding.api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.graph</groupId>
            <artifactId>org.citadel.features.graph.api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.graph.provider</groupId>
            <artifactId>org.citadel.features.graph.provider.topology</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Test -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.enlinkd</groupId>
            <artifactId>org.citadel.features.enlinkd.service.api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.citadel.features.topologies</groupId>
            <artifactId>org.citadel.features.topologies.service.api</artifactId>
            <version>${project.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.citadel.integration.api</groupId>
            <artifactId>config</artifactId>
            <version>${citadelApiVersion}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
