<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.citadel.features.nrtg</groupId>
    <artifactId>protocol-collectors</artifactId>
    <version>35.0.0-SNAPSHOT</version>
  </parent>
  <groupId>org.citadel.features.nrtg.protocolcollector</groupId>
  <artifactId>nrtg-protocolcollector-snmp</artifactId>
  <packaging>bundle</packaging>
  <name>OpenNMS :: Features :: NRTG :: Collectors :: SNMP</name>
  <properties>
    <bundle.symbolicName>org.citadel.nrtg.protocolcollector.snmp</bundle.symbolicName>
    <bundle.namespace>org.citadel.nrtg.protocolcollector.snmp</bundle.namespace>
  </properties>
  <description>
        Contains the SnmpProtocolCollector, it's able to request values for metrics (oids) from snmp agents on nodes.
    </description>

  <dependencies>
    <!-- OpenNMS NRTCollector -->
    <dependency>
      <groupId>org.citadel.features.nrtg</groupId>
      <artifactId>nrtg-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <!-- OpenNMS SNMP -->
    <dependency>
      <groupId>org.citadel.core.snmp</groupId>
      <artifactId>org.citadel.core.snmp.api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel</groupId>
      <artifactId>citadel-dao-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- Logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- Testing -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.citadel.core.test-api</groupId>
        <artifactId>org.citadel.core.test-api.lib</artifactId>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>org.citadel.core.test-api</groupId>
        <artifactId>org.citadel.core.test-api.snmp</artifactId>
        <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel.core.snmp</groupId>
      <artifactId>org.citadel.core.snmp.implementations.snmp4j</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
       <groupId>org.citadel</groupId>
       <artifactId>citadel-dao-mock</artifactId>
       <scope>test</scope>
    </dependency>
  </dependencies>
</project>
