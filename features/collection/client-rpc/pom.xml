<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.citadel.features</groupId>
    <artifactId>org.citadel.features.collection</artifactId>
    <version>35.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.citadel.features.collection</groupId>
  <artifactId>org.citadel.features.collection.client-rpc</artifactId>
  <name>OpenNMS :: Features :: Collection :: RPC Client</name>
  <packaging>bundle</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Import-Package>
              org.eclipse.persistence.internal.jaxb;resolution:=optional,
              org.eclipse.persistence.internal.jaxb.many;resolution:=optional,
              org.citadel.core.xml,
              org.citadel.netmgt.collection.adapters,
              org.citadel.core.network,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.citadel.features.collection</groupId>
      <artifactId>org.citadel.features.collection.api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.core</groupId>
      <artifactId>org.citadel.core.api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.core.ipc.rpc</groupId>
      <artifactId>org.citadel.core.ipc.rpc.xml</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.core.ipc.rpc</groupId>
      <artifactId>org.citadel.core.ipc.rpc.utils</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.core.snmp</groupId>
      <artifactId>org.citadel.core.snmp.api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel</groupId>
      <artifactId>citadel-config-jaxb</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel</groupId>
      <artifactId>citadel-dao-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.core.test-api</groupId>
      <artifactId>org.citadel.core.test-api.xml</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
