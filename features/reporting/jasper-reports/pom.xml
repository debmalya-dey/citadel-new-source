<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.citadel.features</groupId>
    <artifactId>org.citadel.features.reporting</artifactId>
    <version>35.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.citadel.features.reporting</groupId>
  <artifactId>org.citadel.features.reporting.jasper-reports</artifactId>
  <name>OpenNMS :: Features :: Reporting :: Jasper</name>
  <url>http://www.citadel.org/</url>
  <packaging>bundle</packaging>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <additionalBuildcommands>
            <buildcommand>org.springframework.ide.eclipse.core.springbuilder</buildcommand>
          </additionalBuildcommands>
          <additionalProjectnatures>
            <projectnature>org.springframework.ide.eclipse.core.springnature</projectnature>
          </additionalProjectnatures>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Export-Package>org.citadel.reporting.jasperreports.svclayer.*;version="${project.version}"</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.citadel.core</groupId>
      <artifactId>org.citadel.core.db</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel</groupId>
      <artifactId>citadel-dao</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.tests</groupId>
      <artifactId>org.citadel.tests.mock-elements</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.reporting</groupId>
      <artifactId>org.citadel.features.reporting.api</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.reporting</groupId>
      <artifactId>org.citadel.features.reporting.repository</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.reporting</groupId>
      <artifactId>org.citadel.features.reporting.model</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.citadel.dependencies</groupId>
      <artifactId>jasper-shaded</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.reporting</groupId>
      <artifactId>jasper-reports-filter</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.reporting</groupId>
      <artifactId>org.citadel.features.reporting.jasper-reports-compiler</artifactId>
      <version>${project.version}</version>
    </dependency>
      <dependency>
          <groupId>org.apache.commons</groupId>
          <artifactId>commons-jexl</artifactId>
      </dependency>
  </dependencies>

</project>
