    </dependency>
    <dependency>
      <groupId>org.citadel</groupId>
      <artifactId>citadel-javamail-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.dependencies</groupId>
      <artifactId>quartz-dependencies</artifactId>
