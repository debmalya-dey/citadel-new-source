    <dependency>
      <groupId>org.citadel.dependencies</groupId>
      <artifactId>jasper-shaded</artifactId>
    </dependency>
    <dependency>
      <groupId>org.citadel.features.events</groupId>
      <artifactId>org.citadel.features.events.api</artifactId>
    </dependency>
  </dependencies>
</project>
