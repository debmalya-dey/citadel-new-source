<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">

    <bean id="echoRpcModule" class="org.citadel.core.rpc.echo.EchoRpcModule" />

    <reference id="healthCheckResponseCacheRef" availability="optional" filter="(alias=opennms.passiveEchoRpcHealthCheck)"
               interface="org.citadel.core.health.api.HealthCheckResponseCache" />

    <bean id="healthTrackingEchoRpcModule" class="org.citadel.core.rpc.echo.HealthTrackingEchoRpcModule" >
        <argument ref="echoRpcModule"/>
        <argument ref="healthCheckResponseCacheRef"/>
    </bean>

    <service ref="healthTrackingEchoRpcModule" interface="org.citadel.core.rpc.api.RpcModule" />

</blueprint>
